{
  "name": "Node.js, Python & Live Server",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "installYarnUsingApt": false 
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest",
      "installTools": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "formulahendry.code-runner",
        "ritwickdey.LiveServer"
      ],
      "settings": {
        "code-runner.runInTerminal": true,
        "code-runner.executorMap": {
          "javascript": "node",
          "python": "python3",
          "sql": "mysql -u root workbook -vvv < $fullFileName"
        },
        "python.defaultInterpreterPath": "/usr/local/bin/python3"
      }
    }
  },
  "postCreateCommand": "sudo ln -s /usr/bin/pip3 /usr/bin/pip || true && pip install --upgrade pip && sudo apt-get update && sudo apt-get install -y mariadb-server",
  "postAttachCommand": "sudo service mariadb start",
  "remoteUser": "vscode"
}